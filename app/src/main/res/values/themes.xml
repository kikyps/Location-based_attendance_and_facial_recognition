<resources>
    <!-- Base application theme. -->
    <style name="Theme.AbsensiWajah" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/mulish_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/mulish_black</item>
    </style>

    <style name="Theme.AbsensiWajah.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/mulish_black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.AbsensiWajah.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AbsensiWajah.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VerifyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_input_text_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>                   <!--header background-->
        <!--<item name="android:windowBackground">@color/colorPrimary</item>-->      <!--calendar background-->
         <item name="android:textColorPrimary">@color/black</item>
        <!-- <item name="android:textColorSecondary">@color/colorAccent</item>-->   <!--days of the week-->
<!--        <item name="fontFamily">@font/mulish_black</item>-->
    </style>

    <style name="MyDatePicker">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="@style/my_dialog_theme">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="text_style_title" parent="android:Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/mulish_black</item>
    </style>

    <style name="text_style" parent="android:Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/mulish_black</item>
    </style>

    <style name="spiner_style" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/mulish_black</item>
    </style>

    <style name="MyCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="fabtheme" parent="Widget.Design.FloatingActionButton">
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="Theme.Penggajian.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Penggajian.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Dexter.Internal.Theme.Transparent"
        parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>